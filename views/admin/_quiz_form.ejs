
<div class="form-group mb-2">
    <label for="title">Quiz Name</label>
    <input required type="text" placeholder="Enter Quiz Name" value="<%= quiz.quizName %>" name="quizName" id="quizName" class="form-control">
</div>

<% if(quiz.quizDate == null) { %>
    <div class="form-group mb-2">
        <label for="quizDate">Date</label>
        <input required type="date" name="quizDate" id="quizDate" class="form-control">
    </div>       
<% } else if (quiz.quizDate != null) { %>
    <div class="form-group mb-2">
        <label for="quizDate">Date</label>
        <input required type="date" value="<%= quiz.quizDate.toISOString().split('T')[0] %>" name="quizDate" id="quizDate" class="form-control">
    </div> 
<% }  %>


<div class="form-group mb-2">
    <label for="starttime">Start Time</label>
    <input required type="time" value="<%= quiz.starttime %>" id="starttime" name="starttime" class="form-control">
</div>

<div class="form-group mb-2">
    <label for="quizRounds">Rounds</label>
    <input required type="text" placeholder="Enter the Number of Rounds" value="<%= quiz.quizRounds %>" name="quizRounds" id="quizRounds" class="form-control">
</div>

<button type="submit" class="btn btn-primary">Save</button>
<a href="/admin" class="btn btn-secondary">Cancel</a>